<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h3>Edit Your Listings</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
        <div class="mb-3">
            <label for="title" class="form-lable">Title</label>
            <input value="<%= listing.title %>" name="listing[title]" class="form-control">  <!--object name => listing KEY => title-->
        </div>
        <div class="mb-3">
            <label for="description" class="form-lable">description</label>
            <textarea name="listing[description]" rows="5" cols="20" class="form-control"><%= listing.description %></textarea>
        </div>
        <div class="mb-3">
            <label for="image" class="form-lable">image link</label>
            <input name="listing[image]" value="<%= listing.image %>" class="form-control">
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-lable">Price</label>
                <input name="listing[price]" value="<%= listing.price %>" type="number" class="form-control">
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-lable">Country</label>
                <input class="form-control" name="listing[country]" value=""<%= listing.country %> type="text">
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-lable">Location</label>
            <input name="listing[location]" value="<%= listing.location %>" type="text" class="form-control">        
        </div>
    
        <button class="btn btn-dark edit-btn mt-3">Edit</button>
    </form>
</div>
</div>
