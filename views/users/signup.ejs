<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h2 class="col-6 offset-3">SignUp on WanderLust</h2>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="username" class="form-lable">Username</label>
                <input type="text" id="username" name="username" class="form-control" required><br>
                <div class="invalid-feedback">Enter Valid username</div>
                <div class="valid-feedback">Valid username</div>
            </div>  
            <div class="mb-3">
                <label for="email" class="form-lable">Email</label>
                <input type="email" id="email" name="email" class="form-control" required><br>
            </div>  
            <div class="mb-3">
                <label for="password" class="form-lable">Password</label>
                <input type="text" id="password" name="password" class="form-control" required><br>
                <div class="invalid-feedback">Enter Valid password</div>
                <div class="valid-feedback">Valid password</div>
            </div>  
            <button class="btn btn-danger">SignUp</button>
        </form>
    </div>
</div>